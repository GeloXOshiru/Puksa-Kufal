-- Services
local Players = game:GetService("Players")
local SoundService = game:GetService("SoundService")
local UserInputService = game:GetService("UserInputService")

-- Local Player & GUI
local player = Players.LocalPlayer
local playerGui = player.PlayerGui
local eleriumUI = playerGui:WaitForChild("EleriumUI")

-- --------------------------
-- CREATE UI ELEMENTS
-- --------------------------

-- Main Menu Frame (Futuristic Gradient)
local mainFrame = Instance.new("Frame")
mainFrame.Name = "Bugok Yarn"
mainFrame.Size = UDim2.new(0.8, 0, 0.7, 0)
mainFrame.Position = UDim2.new(0.1, 0, 0.15, 0)
mainFrame.BackgroundTransparency = 0.2
mainFrame.BackgroundColor3 = Color3.new(0.05, 0.05, 0.15)
mainFrame.BorderSizePixel = 2
mainFrame.BorderColor3 = Color3.new(0.3, 0.1, 0.5) -- Purple Glow Base
mainFrame.Parent = eleriumUI

-- Add Glow Effect to Frame
local glow = Instance.new("ImageLabel")
glow.Name = "Glow"
glow.Size = UDim2.new(1.05, 0, 1.05, 0)
glow.Position = UDim2.new(-0.025, 0, -0.025, 0)
glow.BackgroundTransparency = 1
glow.Image = "rbxassetid://154966922" -- Glow Texture
glow.ImageColor3 = Color3.new(0.5, 0.2, 0.8)
glow.ImageTransparency = 0.7
glow.ZIndex = mainFrame.ZIndex - 1
glow.Parent = mainFrame

-- Title Label ("Elerium Core")
local title = Instance.new("TextLabel")
title.Name = "Title"
title.Size = UDim2.new(0.9, 0, 0.2, 0)
title.Position = UDim2.new(0.05, 0, 0.1, 0)
title.BackgroundTransparency = 1
title.Text = "ELERIUM CORE"
title.TextColor3 = Color3.new(0.8, 0.4, 1)
title.TextScaled = true
title.Font = Enum.Font.GothamBold
title.TextStrokeTransparency = 0.5
title.TextStrokeColor3 = Color3.new(0, 0, 0)
title.Parent = mainFrame

-- Play Button
local playButton = Instance.new("TextButton")
playButton.Name = "PlayButton"
playButton.Size = UDim2.new(0.6, 0, 0.15, 0)
playButton.Position = UDim2.new(0.2, 0, 0.4, 0)
playButton.BackgroundColor3 = Color3.new(0.2, 0.1, 0.4)
playButton.BorderColor3 = Color3.new(0.6, 0.3, 0.9)
playButton.Text = "START MISSION"
playButton.TextColor3 = Color3.new(1, 1, 1)
playButton.TextScaled = true
playButton.Font = Enum.Font.GothamMedium
playButton.Parent = mainFrame

-- Settings Button
local settingsButton = Instance.new("TextButton")
settingsButton.Name = "SettingsButton"
settingsButton.Size = UDim2.new(0.6, 0, 0.15, 0)
settingsButton.Position = UDim2.new(0.2, 0, 0.6, 0)
settingsButton.BackgroundColor3 = Color3.new(0.2, 0.1, 0.4)
settingsButton.BorderColor3 = Color3.new(0.6, 0.3, 0.9)
settingsButton.Text = "SETTINGS"
settingsButton.TextColor3 = Color3.new(1, 1, 1)
settingsButton.TextScaled = true
settingsButton.Font = Enum.Font.GothamMedium
settingsButton.Parent = mainFrame

-- Settings Frame (Hidden by Default)
local settingsFrame = Instance.new("Frame")
settingsFrame.Name = "SettingsFrame"
settingsFrame.Size = UDim2.new(0.8, 0, 0.5, 0)
settingsFrame.Position = UDim2.new(0.1, 0, 0.25, 0)
settingsFrame.BackgroundColor3 = Color3.new(0.05, 0.05, 0.15)
settingsFrame.BorderColor3 = Color3.new(0.3, 0.1, 0.5)
settingsFrame.BackgroundTransparency = 0.3
settingsFrame.Visible = false
settingsFrame.Parent = eleriumUI

-- Volume Slider Label
local volumeLabel = Instance.new("TextLabel")
volumeLabel.Name = "VolumeLabel"
volumeLabel.Size = UDim2.new(0.4, 0, 0.2, 0)
volumeLabel.Position = UDim2.new(0.1, 0, 0.2, 0)
volumeLabel.BackgroundTransparency = 1
volumeLabel.Text = "MUSIC VOLUME"
volumeLabel.TextColor3 = Color3.new(0.8, 0.4, 1)
volumeLabel.TextScaled = true
volumeLabel.Font = Enum.Font.Gotham
volumeLabel.Parent = settingsFrame

-- Volume Slider
local volumeSlider = Instance.new("Slider")
volumeSlider.Name = "VolumeSlider"
volumeSlider.Size = UDim2.new(0.4, 0, 0.1, 0)
volumeSlider.Position = UDim2.new(0.5, 0, 0.25, 0)
volumeSlider.MinValue = 0
volumeSlider.MaxValue = 1
volumeSlider.Value = SoundService.MasterVolume
volumeSlider.BackgroundColor3 = Color3.new(0.1, 0.1, 0.2)
volumeSlider.ThumbColor3 = Color3.new(0.6, 0.3, 0.9)
volumeSlider.Parent = settingsFrame

-- Back Button (Settings)
local backButton = Instance.new("TextButton")
backButton.Name = "BackButton"
backButton.Size = UDim2.new(0.3, 0, 0.15, 0)
backButton.Position = UDim2.new(0.35, 0, 0.7, 0)
backButton.BackgroundColor3 = Color3.new(0.2, 0.1, 0.4)
backButton.BorderColor3 = Color3.new(0.6, 0.3, 0.9)
backButton.Text = "BACK"
backButton.TextColor3 = Color3.new(1, 1, 1)
backButton.TextScaled = true
backButton.Font = Enum.Font.GothamMedium
backButton.Parent = settingsFrame

-- --------------------------
-- ADD FUNCTIONALITY
-- --------------------------

-- Play Button: Teleport to a "Game" part (replace with your logic!)
playButton.MouseButton1Click:Connect(function()
    local gamePart = workspace:FindFirstChild("GameSpawn") -- Create this in Workspace first!
    if gamePart then
        player.Character.HumanoidRootPart.CFrame = gamePart.CFrame
        eleriumUI.Visible = false -- Hide UI when playing
    else
        warn("Create a 'GameSpawn' part in Workspace!")
    end
end)

-- Settings Button: Toggle Settings Frame
settingsButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = not mainFrame.Visible
    settingsFrame.Visible = not settingsFrame.Visible
end)

-- Back Button: Return to Main Menu
backButton.MouseButton1Click:Connect(function()
    mainFrame.Visible = true
    settingsFrame.Visible = false
end)

-- Volume Slider: Adjust Master Volume
volumeSlider.Changed:Connect(function(property)
    if property == "Value" then
        SoundService.MasterVolume = volumeSlider.Value
    end
end)

-- Mobile-Friendly: Make buttons bigger on touch devices
if UserInputService.TouchEnabled then
    playButton.Size = UDim2.new(0.7, 0, 0.18, 0)
    settingsButton.Size = UDim2.new(0.7, 0, 0.18, 0)
    backButton.Size = UDim2.new(0.4, 0, 0.2, 0)
end
